<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Game1Activity">

    <!-- Timer -->
    <LinearLayout
        android:id="@+id/timerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time : " />
        <Chronometer
            android:id="@+id/gameScreenTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- Score -->
    <LinearLayout
        android:id="@+id/scoreLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score : " />

        <TextView
            android:id="@+id/gameScreenScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

    </LinearLayout>

    <!-- Cells -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/gameCell1"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/gameCell2"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/gameCell3"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/gameCell4"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/gameCell5"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/gameCell6"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/gameCell7"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/gameCell8"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/gameCell9"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/gameCell10"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/gameCell11"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/gameCell12"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/gameCell13"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/gameCell14"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/gameCell15"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/gameCell16"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

    <!-- End Game -->

    <Button
        android:id="@+id/gameScreenEndGameBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="END GAME" />

</LinearLayout>